{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "rlustemberg/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "rlustemberg/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "rlustemberg/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "rlustemberg/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "postMappings": [
          {
              "hostPort": 80,
              "containerPort": 80
          }
      ],
      "links": ["client","server"]
    }
  ]
}
